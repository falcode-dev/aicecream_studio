---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE, categoryToSlug } from '../consts';
import '../styles/index.css';

const latestPosts = (await getCollection('blog'))
	.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
	.slice(0, 6);

// 構造化データの生成
const siteURL = Astro.site || Astro.url.origin;

// WebSite構造化データ
const websiteData = {
	"@context": "https://schema.org",
	"@type": "WebSite",
	"name": SITE_TITLE,
	"description": SITE_DESCRIPTION,
	"url": siteURL,
	"potentialAction": {
		"@type": "SearchAction",
		"target": {
			"@type": "EntryPoint",
			"urlTemplate": `${siteURL}/blog?category={search_term_string}`
		},
		"query-input": "required search_term_string"
	}
};
const websiteJson = JSON.stringify(websiteData);

// Organization構造化データ
const orgData = {
	"@context": "https://schema.org",
	"@type": "Organization",
	"name": "aice cream studio",
	"url": siteURL,
	"logo": new URL("icon.png", siteURL + import.meta.env.BASE_URL).href,
	"sameAs": []
};
const orgJson = JSON.stringify(orgData);
---

<!doctype html>
<html lang="ja">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		{/* 構造化データ - WebSite */}
		<script type="application/ld+json" set:html={websiteJson} />
		{/* 構造化データ - Organization */}
		<script type="application/ld+json" set:html={orgJson} />
	</head>
	<body>
		<Header />
		<main>
			<!-- WELCOMEメッセージ -->
			<section class="hero">
				<div class="hero-badge">WEBクリエイター</div>
				<h1>シンプルだけど、<br />スタイリッシュ。</h1>
				<p>
					TypeScriptを中心としたモダンな開発スタックで、<br />
					シンプルで静かなデザインのアプリケーションを作っています
				</p>
			</section>
			
			<!-- ブログ -->
			{latestPosts.length > 0 && (
				<section class="section">
					<h2 class="section-title">ブログ</h2>
					<p class="section-subtitle">技術的な知見や考え方を共有しています</p>
					<ul class="posts-grid">
						{latestPosts.map((post) => (
							<li>
								<a href={`${import.meta.env.BASE_URL}blog/${post.data.category ? `${categoryToSlug(post.data.category)}/${post.id}/` : `${post.id}/`}`} class="post-card">
									{post.data.heroImage ? (
										<Image
											width={400}
											height={200}
											src={post.data.heroImage}
											alt={post.data.title}
											class="post-card-image"
										/>
									) : (
										<div class="post-card-image"></div>
									)}
									<h3 class="post-card-title">{post.data.title}</h3>
									<p class="post-card-date">
										<FormattedDate date={post.data.pubDate} />
									</p>
								</a>
							</li>
						))}
					</ul>
					<div class="view-all">
						<a href={`${import.meta.env.BASE_URL}blog`} class="view-all-link">もっと見る</a>
					</div>
				</section>
			)}
			
			<!-- スキル -->
			<section class="section">
				<h2 class="section-title">スキル</h2>
				<p class="section-subtitle">日々の制作で使っている技術とツール</p>
				<div class="skills-grid">
					<div class="skill-item">
						<div class="skill-name">Frontend</div>
						<div class="skill-tags">
							<span>TypeScript</span>
							<span>React</span>
							<span>Astro</span>
						</div>
					</div>
					<div class="skill-item">
						<div class="skill-name">Design</div>
						<div class="skill-tags">
							<span>Figma</span>
							<span>デザイン</span>
						</div>
					</div>
					<div class="skill-item">
						<div class="skill-name">Tools</div>
						<div class="skill-tags">
							<span>Git</span>
							<span>VS Code</span>
						</div>
					</div>
				</div>
			</section>
			
			<!-- プロダクト -->
			<section class="section">
				<h2 class="section-title">プロダクト</h2>
				<p class="section-subtitle">開発したアプリケーション</p>
				<div class="coming-soon">
					<p class="coming-soon-text">Coming Soon</p>
					<p class="coming-soon-description">随時アプリを開発・公開予定です</p>
				</div>
			</section>
		</main>
		<Footer />
	</body>
</html>
