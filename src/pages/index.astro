---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE, categoryToSlug } from '../consts';
import '../styles/index.css';
import aiceIcon from '../assets/aice_icon_500.png.png';
import puniBunny from '../assets/puni_bunny_bg_fast.gif';

const latestPosts = (await getCollection('blog'))
	.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
	.slice(0, 6);

// 構造化データの生成
const siteURL = Astro.site || Astro.url.origin;

// WebSite構造化データ
const websiteData = {
	"@context": "https://schema.org",
	"@type": "WebSite",
	"name": SITE_TITLE,
	"description": SITE_DESCRIPTION,
	"url": siteURL,
	"potentialAction": {
		"@type": "SearchAction",
		"target": {
			"@type": "EntryPoint",
			"urlTemplate": `${siteURL}/blog?category={search_term_string}`
		},
		"query-input": "required search_term_string"
	}
};
const websiteJson = JSON.stringify(websiteData);

// Organization構造化データ
const orgData = {
	"@context": "https://schema.org",
	"@type": "Organization",
	"name": "aice cream studio",
	"url": siteURL,
	"logo": new URL("icon.png", siteURL + import.meta.env.BASE_URL).href,
	"sameAs": []
};
const orgJson = JSON.stringify(orgData);
---

<!doctype html>
<html lang="ja">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		{/* 構造化データ - WebSite */}
		<script type="application/ld+json" set:html={websiteJson} />
		{/* 構造化データ - Organization */}
		<script type="application/ld+json" set:html={orgJson} />
	</head>
	<body class="index-page">
		<Header />
		<main>
			<!-- 1画面目: WELCOMEメッセージ -->
			<section class="fullscreen-section welcome-screen">
				<div class="welcome-section">
					<div class="welcome-image-wrapper">
						<div class="speech-bubble show whisper-bubble" id="speech-bubble">
							<span class="speech-bubble-text" id="speech-bubble-text">触ってみて！</span>
						</div>
						<img
							id="welcome-icon"
							src={aiceIcon.src}
							alt="aice cream studio"
							class="welcome-image"
							data-png-src={aiceIcon.src}
							data-gif-src={puniBunny.src}
						/>
					</div>
					<div class="welcome-message">
						<span class="welcome-text">ようこそ、</span>
						<span class="welcome-brand">aice cream studio</span>
						<span class="welcome-text">へ！</span>
					</div>
				</div>
			</section>
			
			<!-- 2画面目: テーマ・特徴 -->
			<section class="fullscreen-section theme-screen">
				<div class="theme-content">
					<div class="hero-badge">WEBクリエイター</div>
					<h1>のんびり、ゆっくり、<br />そんなアプリでみんなを癒す。</h1>
					<p>
						慌ただしい日常の中で、<br />
						少しでも心が休まるような、優しいデザインのアプリケーションを作っています
					</p>
				</div>
			</section>
			
			<!-- 3画面目: ブログ -->
			{latestPosts.length > 0 && (
				<section class="fullscreen-section blog-screen">
					<h2 class="section-title">ブログ</h2>
					<p class="section-subtitle">技術的な知見や考え方を共有しています</p>
					<ul class="posts-grid">
						{latestPosts.map((post) => (
							<li>
								<a href={`${import.meta.env.BASE_URL}blog/${post.data.category ? `${categoryToSlug(post.data.category)}/${post.id}/` : `${post.id}/`}`} class="post-card">
									{post.data.heroImage ? (
										<Image
											width={400}
											height={200}
											src={post.data.heroImage}
											alt={post.data.title}
											class="post-card-image"
										/>
									) : (
										<div class="post-card-image"></div>
									)}
									<h3 class="post-card-title">{post.data.title}</h3>
									<p class="post-card-date">
										<FormattedDate date={post.data.pubDate} />
									</p>
								</a>
							</li>
						))}
					</ul>
					<div class="view-all">
						<a href={`${import.meta.env.BASE_URL}blog`} class="view-all-link">もっと見る</a>
					</div>
				</section>
			)}
			
			<!-- 4画面目: プロダクト -->
			<section class="fullscreen-section product-screen">
				<h2 class="section-title">プロダクト</h2>
				<p class="section-subtitle">開発したアプリケーション</p>
				<div class="coming-soon">
					<p class="coming-soon-text">Coming Soon</p>
					<p class="coming-soon-description">随時アプリを開発・公開予定です</p>
				</div>
			</section>
		</main>
		<Footer />
		<script>
			document.addEventListener('DOMContentLoaded', () => {
				const iconImage = document.getElementById('welcome-icon');
				const speechBubble = document.getElementById('speech-bubble');
				const speechBubbleText = document.getElementById('speech-bubble-text');
				if (!iconImage || !speechBubble || !speechBubbleText) return;
				
				const pngSrc = iconImage.getAttribute('data-png-src');
				const gifSrc = iconImage.getAttribute('data-gif-src');
				if (!pngSrc || !gifSrc) return;
				
				// ランダムメッセージの配列
				const randomMessages = [
					'わーい！',
					'ゆっくりしていってねー',
					'ワクワク',
					'お腹すいたー！',
					'仕事休みたーい！',
					'何するのー？'
				];
				
				let isAnimating = false;
				
				// ランダムメッセージを取得する関数
				const getRandomMessage = () => {
					return randomMessages[Math.floor(Math.random() * randomMessages.length)];
				};
				
				// メッセージを表示する関数
				const showMessage = (message, isWhisper = false) => {
					// スタイルを先に切り替え
					if (isWhisper) {
						speechBubble.classList.add('whisper-bubble');
					} else {
						speechBubble.classList.remove('whisper-bubble');
					}
					
					// メッセージを更新
					speechBubbleText.textContent = message;
					
					// フェードインアニメーション
					speechBubble.classList.add('show');
				};
				
				// メッセージを非表示にする関数
				const hideMessage = () => {
					speechBubble.classList.remove('show');
				};
				
				// メッセージを切り替える関数（アニメーション付き）
				const switchMessage = (newMessage, isWhisper = false) => {
					// フェードアウト
					hideMessage();
					
					// アニメーション完了後に新しいメッセージを表示
					setTimeout(() => {
						showMessage(newMessage, isWhisper);
					}, 300); // フェードアウトの時間に合わせる
				};
				
				iconImage.addEventListener('click', () => {
					if (isAnimating) return; // アニメーション中は無視
					
					isAnimating = true;
					
					// GIFを再生（タイムスタンプを追加して強制的に再読み込み）
					const timestamp = new Date().getTime();
					iconImage.src = `${gifSrc}?t=${timestamp}`;
					
					// ランダムメッセージに切り替え（アニメーション付き）
					switchMessage(getRandomMessage(), false);
					
				// GIFの再生時間を考慮して、約1.9秒後にPNGに戻す
				setTimeout(() => {
					iconImage.src = pngSrc;
					
					// 「触ってみて！」に切り替え（アニメーション付き）
					switchMessage('触ってみて！', true);
					
					// アニメーション完了後にフラグをリセット
					setTimeout(() => {
						isAnimating = false;
					}, 600); // フェードアウト + フェードインの時間
				}, 1900);
				});
			});
		</script>
	</body>
</html>
