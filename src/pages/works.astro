---
import BaseHead from '../components/BaseHead.astro';
import Button from '../components/Button.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_TITLE } from '../consts';
---

<!doctype html>
<html lang="ja">
	<head>
		<BaseHead
			title={`成果物 | ${SITE_TITLE}`}
			description="金融系SEとしての4年間の経験と、副業で培った文章力・情報発信力を活かして、技術 × ライティングで価値を提供しています。"
		/>
		<style>
			/* 成果物ページ専用スタイル */
			.works-hero {
				text-align: center;
				padding: 4em 0 3em;
				margin-bottom: 5em;
				position: relative;
			}
			
			.works-hero::after {
				content: '';
				position: absolute;
				bottom: 0;
				left: 50%;
				transform: translateX(-50%);
				width: 100px;
				height: 2px;
				background: linear-gradient(90deg, transparent, var(--accent), transparent);
			}

			.works-hero h1 {
				font-size: 2.5em;
				margin-bottom: 1.5em;
				line-height: 1.3;
				font-weight: 600;
				color: rgb(var(--black));
				letter-spacing: -0.02em;
			}

			.works-hero-intro {
				font-size: 1.1em;
				color: rgb(var(--gray-dark));
				line-height: 1.8;
				max-width: 700px;
				margin: 0 auto;
			}

			.works-hero-intro strong {
				color: rgb(var(--black));
				font-weight: 600;
			}

			/* セクション共通 */
			.works-section {
				margin-bottom: 5em;
			}

			.works-section-header {
				margin-bottom: 2.5em;
			}

			.works-section-header h2 {
				margin: 0 0 0.5em 0;
				font-size: 1.75em;
				font-weight: 600;
				color: rgb(var(--black));
				line-height: 1.3;
				letter-spacing: -0.01em;
				position: relative;
				display: inline-block;
			}
			
			.works-section-header h2::after {
				content: '';
				position: absolute;
				bottom: -0.5em;
				left: 0;
				width: 40px;
				height: 3px;
				background: var(--accent);
				border-radius: 2px;
			}

			.works-section-description {
				color: rgb(var(--gray));
				margin: 1em 0 0 0;
				font-size: 0.95em;
				line-height: 1.7;
			}

			/* note実績 */
			.note-stats {
				display: flex;
				flex-wrap: wrap;
				gap: 2em;
				margin-bottom: 3em;
				justify-content: center;
			}

			.stat-item {
				text-align: center;
				padding: 0;
				background: transparent;
			}

			.stat-item .stat-value {
				font-size: 2em;
				font-weight: 600;
				color: var(--accent);
				margin-bottom: 0.5em;
				line-height: 1.2;
			}

			.stat-item .stat-label {
				font-size: 0.9em;
				color: rgb(var(--gray-dark));
			}
			
			.stat-item::after {
				content: '';
				display: block;
				width: 1px;
				height: 40px;
				background: rgb(var(--gray-light));
				margin: 1em auto 0;
			}
			
			.stat-item:last-child::after {
				display: none;
			}

			.note-articles {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
				gap: 2em;
			}

			.note-article-card {
				padding: 2em;
				border: 1px solid rgb(var(--gray-light));
				border-radius: var(--border-radius);
				background: rgb(var(--white));
				transition: var(--transition);
			}
			
			.note-article-card:hover {
				border-color: var(--accent-light);
				box-shadow: var(--box-shadow);
			}

			.note-article-card h3 {
				margin: 0 0 0.75em 0;
				font-size: 1.2em;
				font-weight: 600;
				color: rgb(var(--black));
				line-height: 1.4;
			}

			.note-article-card p {
				margin: 0;
				color: rgb(var(--gray-dark));
				font-size: 0.95em;
				line-height: 1.7;
			}

			/* ブログ記事 */
			.blog-categories {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
				gap: 3em;
			}

			.blog-category {
				padding: 0;
				background: transparent;
			}

			.blog-category h3 {
				margin: 0 0 1.5em 0;
				font-size: 1.3em;
				font-weight: 600;
				color: rgb(var(--black));
				letter-spacing: -0.01em;
			}

			.blog-category ul {
				margin: 0;
				padding: 0;
				list-style: none;
				color: rgb(var(--gray-dark));
				line-height: 1.8;
			}

			.blog-category li {
				margin-bottom: 1em;
				padding-left: 1.5em;
				position: relative;
			}
			
			.blog-category li::before {
				content: '—';
				position: absolute;
				left: 0;
				color: var(--accent);
			}

			/* 実務実績 */
			.work-experience {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
				gap: 2em;
			}

			.experience-item {
				padding: 2em;
				border: 1px solid rgb(var(--gray-light));
				border-radius: var(--border-radius);
				background: rgb(var(--white));
				transition: var(--transition);
			}
			
			.experience-item:hover {
				border-color: var(--accent-light);
				box-shadow: var(--box-shadow);
			}

			.experience-item h3 {
				margin: 0 0 1em 0;
				font-size: 1.15em;
				font-weight: 600;
				color: rgb(var(--black));
				line-height: 1.4;
			}

			.experience-item ul {
				margin: 0;
				padding-left: 1.5em;
				color: rgb(var(--gray-dark));
				line-height: 1.8;
			}

			.experience-item li {
				margin-bottom: 0.5em;
			}

			/* 技術プロジェクト */
			.project-card {
				padding: 2.5em;
				border: 1px solid rgb(var(--gray-light));
				border-radius: var(--border-radius);
				background: rgb(var(--white));
				transition: var(--transition);
			}
			
			.project-card:hover {
				border-color: var(--accent-light);
				box-shadow: var(--box-shadow);
			}

			.project-card h3 {
				margin: 0 0 1.5em 0;
				font-size: 1.3em;
				font-weight: 600;
				color: rgb(var(--black));
				line-height: 1.4;
			}

			.project-card ul {
				margin: 0;
				padding-left: 1.5em;
				color: rgb(var(--gray-dark));
				line-height: 1.8;
			}

			.project-card li {
				margin-bottom: 0.75em;
			}

			/* スキルセット */
			.skills-grid {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
				gap: 2.5em;
			}

			.skill-category {
				padding: 0;
				background: transparent;
			}

			.skill-category h3 {
				margin: 0 0 1.5em 0;
				font-size: 1.2em;
				font-weight: 600;
				color: rgb(var(--black));
				letter-spacing: -0.01em;
			}

			.skill-category ul {
				margin: 0;
				padding: 0;
				list-style: none;
				color: rgb(var(--gray-dark));
				line-height: 1.8;
				font-size: 0.95em;
			}

			.skill-category li {
				margin-bottom: 0.75em;
				padding-left: 1.5em;
				position: relative;
			}
			
			.skill-category li::before {
				content: '•';
				position: absolute;
				left: 0;
				color: var(--accent);
				font-weight: 600;
			}

			/* 実績まとめ */
			.stats-summary {
				display: flex;
				flex-wrap: wrap;
				gap: 3em;
				padding: 0;
				background: transparent;
				justify-content: center;
			}

			.summary-item {
				text-align: center;
			}

			.summary-item .summary-value {
				font-size: 2.5em;
				font-weight: 600;
				color: var(--accent);
				margin-bottom: 0.5em;
				line-height: 1.2;
			}

			.summary-item .summary-label {
				font-size: 0.9em;
				color: rgb(var(--gray-dark));
			}
			
			.summary-item::after {
				content: '';
				display: block;
				width: 1px;
				height: 50px;
				background: rgb(var(--gray-light));
				margin: 1.5em auto 0;
			}
			
			.summary-item:last-child::after {
				display: none;
			}

			/* CTA */
			.cta-section {
				padding: 3em 0;
				text-align: center;
			}

			.cta-buttons {
				display: flex;
				flex-wrap: wrap;
				gap: 1em;
				justify-content: center;
			}

			@media (max-width: 768px) {
				.works-hero {
					padding: 3em 1.5em 2em;
				}

				.works-hero h1 {
					font-size: 2em;
				}
				
				.works-section-header h2 {
					font-size: 1.5em;
				}

				.note-stats,
				.stats-summary {
					flex-direction: column;
					gap: 1.5em;
				}
				
				.stat-item::after,
				.summary-item::after {
					display: none;
				}

				.blog-categories,
				.skills-grid,
				.work-experience {
					grid-template-columns: 1fr;
					gap: 1.5em;
				}
				
				.note-articles {
					grid-template-columns: 1fr;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<!-- 非公開メッセージ -->
			<section class="works-hero">
				<h1>成果物</h1>
				<div style="max-width: 600px; margin: 0 auto; padding: 3em 2em; text-align: center; border: 1px solid rgb(var(--gray-light)); border-radius: var(--border-radius); background: rgb(var(--white));">
					<p style="font-size: 1.1em; color: rgb(var(--gray-dark)); line-height: 1.8; margin-bottom: 1.5em;">
						申し訳ございませんが、<br />
						現在成果物ページは非公開となっております。
					</p>
					<p style="color: rgb(var(--gray)); font-size: 0.95em;">
						ご不便をおかけして申し訳ございません。
					</p>
				</div>
			</section>
		</main>
		<Footer />
	</body>
</html>
