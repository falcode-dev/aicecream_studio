---
import { getCollection } from 'astro:content';
import BaseHead from '../../../components/BaseHead.astro';
import BlogCard from '../../../components/BlogCard.astro';
import Footer from '../../../components/Footer.astro';
import Header from '../../../components/Header.astro';
import { SITE_TITLE } from '../../../consts';

const categories = ['life', 'career', 'engineering', 'microsoft', 'typescript'];
const categoryLabels: Record<string, { label: string; description: string }> = {
	life: {
		label: '自由に生きる',
		description: '働き方・価値観・生き方の話',
	},
	career: {
		label: 'キャリア・副業',
		description: '自分で稼ぐ力をつけるロードマップ',
	},
	engineering: {
		label: 'エンジニアリング',
		description: 'SEが現場で使える知識',
	},
	microsoft: {
		label: 'Microsoft',
		description: 'Microsoft製品・サービス・働き方',
	},
	typescript: {
		label: 'TypeScript',
		description: '技術Tips・実装ガイド',
	},
};

export async function getStaticPaths() {
	const categoryList = ['life', 'career', 'engineering', 'microsoft', 'typescript'];
	return categoryList.map((category) => ({
		params: { category },
	}));
}

const { category } = Astro.params;
if (!category || !categories.includes(category)) {
	return Astro.redirect('/blog');
}

const allPosts = await getCollection('blog');
const posts = allPosts
	.filter((post) => post.data.category === category)
	.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const categoryInfo = categoryLabels[category] || { label: category, description: '' };
---

<!doctype html>
<html lang="ja">
	<head>
		<BaseHead
			title={`カテゴリ：${categoryInfo.label} | ブログ | ${SITE_TITLE}`}
			description={`${categoryInfo.label}に関する記事一覧です。${categoryInfo.description}`}
		/>
		<style>
			.category-header {
				margin-bottom: 2em;
			}
			
			.category-header h1 {
				margin: 0 0 0.5em 0;
				font-size: 1.5em;
				font-weight: 500;
			}
			
			.category-description {
				color: rgb(var(--gray));
				margin: 0;
				font-size: 0.9em;
			}
			
			.posts-list {
				display: grid;
				grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
				gap: 1.25em;
				list-style: none;
				margin: 0;
				padding: 0;
			}
			
			@media (max-width: 768px) {
				.posts-list {
					grid-template-columns: 1fr;
					gap: 1em;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<div class="category-header">
				<h1>カテゴリ：{categoryInfo.label}</h1>
				<p class="category-description">
					{categoryInfo.description && `${categoryInfo.description} `}
					「{categoryInfo.label}」に関する記事一覧です。
				</p>
			</div>
			<section>
				{posts.length > 0 ? (
					<ul class="posts-list">
						{
							posts.map((post) => (
								<li>
									<BlogCard post={post} />
								</li>
							))
						}
					</ul>
				) : (
					<p>このカテゴリにはまだ記事がありません。</p>
				)}
			</section>
		</main>
		<Footer />
	</body>
</html>
