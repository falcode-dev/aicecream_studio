---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Header from '../../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE, categoryToSlug } from '../../consts';
import '../../styles/blog/index.css';
import '../../styles/blog/categories.css';

const allPosts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);

const selectedCategory = Astro.url.searchParams.get('category') || 'all';
const categories = ['Microsoft Tech Blog', 'のんびり生きるための副業'];
---

<!doctype html>
<html lang="ja">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<nav class="category-navigation" aria-label="カテゴリナビゲーション">
			<div class="category-navigation-container">
				<a 
					href={`${import.meta.env.BASE_URL}blog`}
					data-category="all" 
					class={`category-nav-link ${selectedCategory === 'all' ? 'active' : ''}`}
				>
					<span>すべて</span>
				</a>
				{categories.map((category) => (
					<a 
						href={`${import.meta.env.BASE_URL}blog?category=${encodeURIComponent(category)}`}
						data-category={category}
						class={`category-nav-link ${selectedCategory === category ? 'active' : ''}`}
					>
						<span>{category}</span>
					</a>
				))}
			</div>
		</nav>
		<main>
			<section>
				<ul id="posts-list">
					{
						allPosts.map((post) => {
							const postCategory = post.data.category || '';
							const isVisible = selectedCategory === 'all' || postCategory === selectedCategory;
							return (
								<li 
									data-category={postCategory}
									style={isVisible ? '' : 'display: none;'}
								>
									<a href={`${import.meta.env.BASE_URL}blog/${post.data.category ? `${categoryToSlug(post.data.category)}/${post.id}/` : `${post.id}/`}`}>
										{post.data.heroImage && (
											<Image width={720} height={360} src={post.data.heroImage} alt={post.data.title} />
										)}
										<h4 class="title">{post.data.title}</h4>
										<p class="date">
											<FormattedDate date={post.data.pubDate} />
										</p>
									</a>
								</li>
							);
						})
					}
				</ul>
				<script define:vars={{ allPosts: allPosts.map(p => ({ id: p.id, category: p.data.category || '' })) }}>
					document.addEventListener('DOMContentLoaded', () => {
						const categoryLinks = document.querySelectorAll('.category-nav-link');
						const postsList = document.getElementById('posts-list');
						const posts = Array.from(postsList?.querySelectorAll('li') || []);
						
						// 初期ロード時のフィルタリングとアクティブ状態の設定
						const urlParams = new URLSearchParams(window.location.search);
						const initialCategory = urlParams.get('category') || 'all';
						
						// アクティブ状態を設定
						categoryLinks.forEach(link => {
							const linkCategory = link.getAttribute('data-category');
							if (linkCategory === initialCategory) {
								link.classList.add('active');
							} else {
								link.classList.remove('active');
							}
						});
						
						// 初期状態で記事をフィルタリング
						posts.forEach(post => {
							const postCategory = post.getAttribute('data-category');
							if (initialCategory === 'all' || postCategory === initialCategory) {
								post.style.display = '';
							} else {
								post.style.display = 'none';
							}
						});
						
						// ブラウザの戻る/進むボタンに対応
						window.addEventListener('popstate', (e) => {
							const category = e.state?.category || new URLSearchParams(window.location.search).get('category') || 'all';
							
							// アクティブ状態を更新
							categoryLinks.forEach(link => {
								const linkCategory = link.getAttribute('data-category');
								if (linkCategory === category) {
									link.classList.add('active');
								} else {
									link.classList.remove('active');
								}
							});
							
							// 記事をフィルタリング
							posts.forEach(post => {
								const postCategory = post.getAttribute('data-category');
								if (category === 'all' || postCategory === category) {
									post.style.display = '';
								} else {
									post.style.display = 'none';
								}
							});
						});
					});
				</script>
			</section>
		</main>
		<Footer />
	</body>
</html>
