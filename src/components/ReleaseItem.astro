---
interface Props {
    href: string;
    title: string;
    description: string;
    src: string;
}

const { href, title, description, src } = Astro.props;
---

<a class="release-section-card" href={href}>
    <div class="release-content">
        <img src={src} alt="demo-service" />
        <div class="release-content-message">
            <p class="release-content-message-title">{title}</p>
            <p>
                {description}
            </p>
        </div>
    </div>
</a>

<style>
    .release-section-card {
        display: block;
        text-decoration: none;
        transition: transform 0.3s cubic-bezier(0.22, 1, 0.36, 1);
    }

    .release-section-card:hover {
        transform: translateY(-4px);
    }

    .release-content {
        display: flex;
        align-items: center;
        margin-bottom: 20px;
        transition: box-shadow 0.3s ease;

        height: 60px;
    }

    .release-section-card:hover .release-content {
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.25);
        border-radius: 5px;
    }

    .release-content img {
        width: 50px;
        height: 50px;
        margin-right: 20px;
        margin-left: 5px;

        background: #ffffff;
        border: 1px solid #d9d9d9;
        border-radius: 5px;

        transition: transform 0.3s ease;
    }

    .release-section-card:hover img {
        transform: scale(1.05);
    }

    .release-content-message {
        font-family: "Caveat Variable", cursive;
        font-size: 1rem;
        color: #ffffff;
    }

    .release-content-message-title {
        font-size: 1.5rem;
        font-weight: 700;
    }
</style>
