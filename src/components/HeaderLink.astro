---
import type { HTMLAttributes } from 'astro/types';

type Props = HTMLAttributes<'a'>;

const { href, class: className, ...props } = Astro.props;
const baseUrl = import.meta.env.BASE_URL;

// baseUrlを正規化（末尾のスラッシュを統一）
const normalizedBaseUrl = baseUrl.endsWith('/') ? baseUrl : `${baseUrl}/`;

const hrefString = href ? (typeof href === 'string' ? href : href.toString()) : '';

// リンクの解決
const resolvedHref = hrefString.startsWith('/') 
	? `${normalizedBaseUrl}${hrefString.slice(1)}` 
	: hrefString;

// 現在のパスからbaseUrlを除去して比較用のパスを取得
let currentPath = Astro.url.pathname;
if (normalizedBaseUrl !== '/') {
	// baseUrlがルート以外の場合、baseUrlを除去
	if (currentPath.startsWith(normalizedBaseUrl)) {
		currentPath = currentPath.slice(normalizedBaseUrl.length - 1); // 先頭の/を残す
	}
}

// アクティブ判定
const isActive = hrefString === currentPath || 
	(hrefString === '/' && currentPath === '/') ||
	(hrefString !== '/' && currentPath.startsWith(hrefString));
---

<a href={resolvedHref} class:list={[className, { active: isActive }]} {...props}>
	<slot />
</a>
<style>
	a {
		display: inline-block;
		padding: 0.5em 1em;
		color: rgb(var(--gray-dark));
		text-decoration: none;
		border-radius: var(--border-radius);
		transition: var(--transition);
		font-size: 0.95em;
	}
	
	a:hover {
		color: var(--accent);
		background: rgb(var(--gray-lighter));
	}
	
	a.active {
		color: var(--accent);
		font-weight: 600;
		background: rgb(var(--gray-lighter));
	}
</style>
