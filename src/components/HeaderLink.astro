---
import type { HTMLAttributes } from 'astro/types';

type Props = HTMLAttributes<'a'>;

const { href, class: className, ...props } = Astro.props;
const baseUrl = import.meta.env.BASE_URL;
const hrefString = href ? (typeof href === 'string' ? href : href.toString()) : '';
const resolvedHref = hrefString.startsWith('/') 
	? `${baseUrl}${baseUrl.endsWith('/') ? hrefString.slice(1) : hrefString}` 
	: hrefString;
const pathname = Astro.url.pathname.replace(baseUrl, '');
const subpath = pathname.match(/[^\/]+/g);
const isActive = hrefString === pathname || hrefString === '/' + (subpath?.[0] || '');
---

<a href={resolvedHref} class:list={[className, { active: isActive }]} {...props}>
	<slot />
</a>
<style>
	a {
		display: inline-block;
		padding: 0.5em 1em;
		color: rgb(var(--gray-dark));
		text-decoration: none;
		border-radius: var(--border-radius);
		transition: var(--transition);
		font-size: 0.95em;
	}
	
	a:hover {
		color: var(--accent);
		background: rgb(var(--gray-lighter));
	}
	
	a.active {
		color: var(--accent);
		font-weight: 600;
		background: rgb(var(--gray-lighter));
	}
</style>
