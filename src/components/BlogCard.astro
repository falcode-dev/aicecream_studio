---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';
import DateIcon from './DateIcon';
import FormattedDate from './FormattedDate.astro';

interface Props {
	post: CollectionEntry<'blog'>;
}

const { post } = Astro.props;

// 日本時間の日付フォーマット
const formatDate = (date: Date) => {
	const year = date.getFullYear();
	const month = date.getMonth() + 1;
	const day = date.getDate();
	return `${year}年${month}月${day}日`;
};

const pubDate = formatDate(post.data.pubDate);
const updatedDate = post.data.updatedDate ? formatDate(post.data.updatedDate) : null;
const hasUpdated = !!post.data.updatedDate;

const baseUrl = import.meta.env.BASE_URL;
const getUrl = (path: string) => {
	if (path.startsWith('/')) {
		return `${baseUrl}${baseUrl.endsWith('/') ? path.slice(1) : path}`;
	}
	return path;
};
---

<article class="blog-card">
	<a href={getUrl(`/blog/${post.data.slug}/`)}>
		<div class="blog-card-image">
			{post.data.heroImage ? (
				<Image width={400} height={200} src={post.data.heroImage} alt={post.data.title} />
			) : (
				<div class="blog-card-image-placeholder">
					<svg width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
						<path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 0 0-3.375-3.375h-1.5A1.125 1.125 0 0 1 13.5 7.125v-1.5a3.375 3.375 0 0 0-3.375-3.375H8.25m0 12.75h7.5m-7.5 3H12M10.5 2.25H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 0 0-9-9Z" />
					</svg>
				</div>
			)}
		</div>
		<div class="blog-card-content">
			{post.data.category && (
				<a href={getUrl(`/blog/category/${post.data.category}/`)} class="blog-card-category">
					{post.data.category}
				</a>
			)}
			<h3 class="blog-card-title">{post.data.title}</h3>
			<div class="blog-card-date">
				<DateIcon client:only="react" isUpdated={hasUpdated} />
				<span class="date-text">
					{updatedDate ? updatedDate : pubDate}
				</span>
			</div>
			{post.data.tags && post.data.tags.length > 0 && (
				<div class="blog-card-tags">
					{post.data.tags.slice(0, 3).map((tag) => (
						<a href={getUrl(`/blog/tag/${tag}/`)} class="blog-card-tag">
							#{tag}
						</a>
					))}
				</div>
			)}
		</div>
	</a>
</article>

<style>
	.blog-card {
		position: relative;
		border: 1px solid rgb(var(--gray-light));
		border-radius: 4px;
		overflow: hidden;
		transition: var(--transition);
	}
	
	.blog-card:hover {
		border-color: var(--accent-light);
	}
	
	.blog-card a {
		display: block;
		text-decoration: none;
		color: inherit;
	}
	
	.blog-card-image {
		width: 100%;
		height: 200px;
		background: rgb(var(--gray-lighter));
		overflow: hidden;
		margin-bottom: 1em;
		display: flex;
		align-items: center;
		justify-content: center;
	}
	
	.blog-card-image img {
		width: 100%;
		height: 100%;
		object-fit: cover;
	}
	
	.blog-card-image-placeholder {
		width: 100%;
		height: 100%;
		display: flex;
		align-items: center;
		justify-content: center;
		color: rgb(var(--gray));
		background: rgb(var(--gray-lighter));
	}
	
	.blog-card-content {
		position: relative;
		padding: 0 1em 1em 1em;
		min-height: 120px;
	}
	
	.blog-card-category {
		position: absolute;
		top: 0;
		right: 1em;
		padding: 0.3em 0.8em;
		background: var(--accent-light);
		color: var(--accent-dark);
		border-radius: 4px;
		font-size: 0.75em;
		font-weight: 500;
		text-decoration: none;
	}
	
	.blog-card-category:hover {
		background: var(--accent);
		color: white;
	}
	
	.blog-card-title {
		margin: 0 0 0.75em 0;
		padding-right: 4em;
		color: rgb(var(--black));
		font-size: 1.1em;
		line-height: 1.5;
		font-weight: 500;
	}
	
	.blog-card:hover .blog-card-title {
		color: var(--accent);
	}
	
	.blog-card-date {
		display: flex;
		align-items: center;
		gap: 0.5em;
		margin-bottom: 1em;
		color: rgb(var(--gray));
		font-size: 0.85em;
	}
	
	.date-icon {
		width: 1em;
		height: 1em;
		color: rgb(var(--gray));
	}
	
	.date-text {
		font-size: 0.85em;
	}
	
	.blog-card-tags {
		display: flex;
		flex-wrap: wrap;
		gap: 0.5em;
		position: absolute;
		bottom: 1em;
		right: 1em;
		justify-content: flex-end;
	}
	
	.blog-card-tag {
		color: var(--accent);
		text-decoration: none;
		font-size: 0.75em;
		font-weight: 400;
	}
	
	.blog-card-tag:hover {
		color: var(--accent-dark);
		text-decoration: underline;
	}
</style>
