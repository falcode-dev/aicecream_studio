---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';
import FormattedDate from './FormattedDate.astro';
import defaultThumbnail from '../asset/default.jpg';

interface Props {
	post: CollectionEntry<'blog'>;
}

const { post } = Astro.props;

// 日本時間の日付フォーマット
const formatDate = (date: Date) => {
	const year = date.getFullYear();
	const month = date.getMonth() + 1;
	const day = date.getDate();
	return `${year}年${month}月${day}日`;
};

const pubDate = formatDate(post.data.pubDate);
const updatedDate = post.data.updatedDate ? formatDate(post.data.updatedDate) : null;
const hasUpdated = !!post.data.updatedDate;

const baseUrl = import.meta.env.BASE_URL;
const getUrl = (path: string) => {
	if (path.startsWith('/')) {
		return `${baseUrl}${baseUrl.endsWith('/') ? path.slice(1) : path}`;
	}
	return path;
};
---

<article class="blog-card">
	<a href={getUrl(`/blog/${post.data.slug}/`)} class="blog-card-link">
		<div class="blog-card-image">
			<Image 
				width={400} 
				height={200} 
				src={post.data.heroImage || defaultThumbnail} 
				alt={post.data.title}
				loading="lazy"
				format="webp"
			/>
		</div>
		<div class="blog-card-content">
			<h3 class="blog-card-title">{post.data.title}</h3>
			<div class="blog-card-date">
				{hasUpdated ? (
					<svg class="date-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
						<path d="M21.5 2v6h-6M2.5 22v-6h6M2 11.5a10 10 0 1 1 5.13-8.87M2 12.5a10 10 0 1 0 5.13 8.87" />
					</svg>
				) : (
					<svg class="date-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
						<path d="M17 3a2.85 2.83 0 1 1 4 4L7.5 20.5 2 22l1.5-5.5L17 3z" />
					</svg>
				)}
				<span class="date-text">
					{updatedDate ? updatedDate : pubDate}
				</span>
			</div>
		</div>
	</a>
	{post.data.category && (
		<a href={getUrl(`/blog/category/${post.data.category}/`)} class="blog-card-category">
			{post.data.category}
		</a>
	)}
	{post.data.tags && post.data.tags.length > 0 && (
		<div class="blog-card-tags">
			{post.data.tags.slice(0, 3).map((tag) => (
				<a href={getUrl(`/blog/tag/${tag}/`)} class="blog-card-tag">
					#{tag}
				</a>
			))}
		</div>
	)}
</article>

<style>
	.blog-card {
		position: relative;
		border: 1px solid rgb(var(--gray-light));
		border-radius: 4px;
		overflow: hidden;
		transition: var(--transition);
		cursor: pointer;
	}
	
	.blog-card:hover {
		border-color: var(--accent-light);
	}
	
	.blog-card-link {
		display: block;
		width: 100%;
		text-decoration: none;
		color: inherit;
		position: relative;
	}
	
	.blog-card-image {
		width: 100%;
		height: 200px;
		background: rgb(var(--gray-lighter));
		overflow: hidden;
		margin-bottom: 1em;
		display: flex;
		align-items: center;
		justify-content: center;
	}
	
	.blog-card-image img {
		width: 100%;
		height: 100%;
		object-fit: cover;
	}
	
	.blog-card-content {
		position: relative;
		padding: 0 1em 1em 1em;
		min-height: 120px;
	}
	
	.blog-card-category {
		position: absolute;
		top: 0;
		right: 1em;
		padding: 0.3em 0.8em;
		background: var(--accent-light);
		color: var(--accent-dark);
		/* border-radius: 4px; */
		font-size: 0.75em;
		font-weight: 500;
		text-decoration: none;
		z-index: 10;
		pointer-events: auto;
	}
	
	.blog-card-category:hover {
		background: var(--accent);
		color: white;
	}
	
	.blog-card-title {
		margin: 0 0 0.75em 0;
		padding-right: 4em;
		color: rgb(var(--black));
		font-size: 1.1em;
		line-height: 1.5;
		font-weight: 500;
	}
	
	.blog-card:hover .blog-card-title {
		color: var(--accent);
	}
	
	.blog-card-date {
		display: flex;
		align-items: center;
		gap: 0.5em;
		margin-bottom: 1em;
		color: rgb(var(--gray));
		font-size: 0.85em;
	}
	
	.date-icon {
		width: 1em;
		height: 1em;
		color: rgb(var(--gray));
	}
	
	.date-text {
		font-size: 0.85em;
	}
	
	.blog-card-tags {
		display: flex;
		flex-wrap: wrap;
		gap: 0.5em;
		position: absolute;
		bottom: 1em;
		right: 1em;
		justify-content: flex-end;
		z-index: 10;
		pointer-events: auto;
	}
	
	.blog-card-tag {
		color: var(--accent);
		text-decoration: none;
		font-size: 0.75em;
		font-weight: 400;
		position: relative;
		pointer-events: auto;
	}
	
	.blog-card-tag:hover {
		color: var(--accent-dark);
		text-decoration: underline;
	}
</style>
<script>
	// カテゴリとタグのリンククリック時に親リンクへの伝播を防ぐ
	document.addEventListener('DOMContentLoaded', () => {
		const blogCards = document.querySelectorAll('.blog-card');
		blogCards.forEach((card) => {
			const categoryLink = card.querySelector('.blog-card-category');
			const tagLinks = card.querySelectorAll('.blog-card-tag');
			
			if (categoryLink) {
				categoryLink.addEventListener('click', (e) => {
					e.stopPropagation();
				});
			}
			
			tagLinks.forEach((tagLink) => {
				tagLink.addEventListener('click', (e) => {
					e.stopPropagation();
				});
			});
		});
	});
</script>
