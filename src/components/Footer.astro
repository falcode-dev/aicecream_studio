---
import { SITE_TITLE } from '../consts';

const today = new Date();
---

<footer>
	<p>&copy; {today.getFullYear()} {SITE_TITLE}. All rights reserved.</p>
</footer>
<style>
	footer {
		padding: 3em 2em;
		background: rgb(var(--gray-lighter));
		border-top: 1px solid rgb(var(--gray-light));
		text-align: center;
		color: rgb(var(--gray));
		font-size: 0.9em;
	}
	
	footer p {
		margin: 0;
	}
</style>
