---
import { SITE_TITLE } from '../consts';

const today = new Date();
const baseUrl = import.meta.env.BASE_URL;

const getUrl = (path: string) => {
	if (path.startsWith('/')) {
		return `${baseUrl}${baseUrl.endsWith('/') ? path.slice(1) : path}`;
	}
	return path;
};
---

<footer>
	<nav class="footer-nav">
		<a href={getUrl('/privacy/')}>プライバシーポリシー</a>
		<span class="separator">|</span>
		<a href={getUrl('/disclaimer/')}>免責事項</a>
	</nav>
	<p>&copy; {today.getFullYear()} {SITE_TITLE}. All rights reserved.</p>
</footer>
<style>
	footer {
		padding: 3em 2em;
		background: rgb(var(--gray-lighter));
		border-top: 1px solid rgb(var(--gray-light));
		text-align: center;
		color: rgb(var(--gray));
		font-size: 0.9em;
	}
	
	.footer-nav {
		margin-bottom: 1em;
	}
	
	.footer-nav a {
		color: rgb(var(--gray));
		text-decoration: none;
		transition: var(--transition);
	}
	
	.footer-nav a:hover {
		color: var(--accent);
	}
	
	.footer-nav .separator {
		margin: 0 0.5em;
		color: rgb(var(--gray-light));
	}
	
	footer p {
		margin: 0;
	}
</style>
