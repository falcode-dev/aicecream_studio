---
interface Props {
    date: string;
    publish?: string;
    src?: string;
    alt: string;
    comment: string;
    emoji?: string;
}

const { date, publish, src, alt, comment, emoji } = Astro.props;
---

<div class="career-content">
    {
        src ? (
            <img src={src} alt={alt} />
        ) : (
            <p class="career-content-emoji">{emoji}</p>
        )
    }
    <div class="career-content-text">
        <div class="career-content-text-date-info">
            <p class="career-content-text-date">{date}</p>
            {
                publish && (
                    <span class="career-content-text-publish">{publish}</span>
                )
            }
        </div>
        <p>{comment}</p>
    </div>
</div>

<style>
    .career-content {
        display: flex;
        align-items: center;
        margin-bottom: 20px;
        height: 60px;
    }

    .career-content img {
        width: 50px;
        height: 50px;
        margin-right: 20px;
        margin-left: 5px;

        background: #ffffff;
        border: 1px solid #d9d9d9;
        border-radius: 50%;
    }

    .career-content-emoji {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 50px;
        height: 50px;
        margin-right: 20px;
        margin-left: 5px;

        background: #ffffff;
        border: 1px solid #d9d9d9;
        border-radius: 50%;
    }

    .career-content-text {
        font-family: "Caveat Variable", cursive;
        font-size: 1rem;
        color: #ffffff;
    }

    .career-content-text-date-info {
        display: flex;
        align-items: center;
    }

    .career-content-text-date {
        font-weight: 700;
        margin-right: 10px;
    }

    .career-content-text-publish {
        background: #48b6b8;
        border: 1px solid #519899;
        height: 18px;
        font-size: 0.9rem;
        display: flex;
        border-radius: 40px;
        padding: 0 20px;
        align-items: center;
    }
</style>
